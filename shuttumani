    function moveNo() {
      const x = Math.random() * (window.innerWidth - 100);
      const y = Math.random() * (window.innerHeight - 100);
      document.getElementById("no").style.left = x + "px";
      document.getElementById("no").style.top = y + "px";
    }

    function yesClick() {
